import java.util.*;
public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        double basic = sc.nextDouble();
        double hra, da, gross;
        if (basic < 15000) {
            hra = 0.15 * basic;
            da = 0.90 * basic;
        } else {
            hra = 5000;
            da = 0.98 * basic;
        }
       gross = basic + hra + da;
        System.out.printf("%.2f", gross);
        sc.close();
    }
}
