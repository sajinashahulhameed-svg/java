import java.io.*;
import java.util.*;
public class Solution {
  public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        int []boxes={a,b,c};
        int num1=a;int num2=b;int temp;
       
        while(num2!=0){
            temp=num2;
            num2=num1%num2;
            num1=temp;
                
        }
        int gcdAB=num1;
        int num3=c;
         while(num3!=0){
            temp=num3;
            num3=gcdAB%num3;
            gcdAB=temp;
                
        }
        Arrays.sort(boxes);
        int secondLargest=boxes[1];
       
                     System.out.println("The treasure is in the box which has number "+secondLargest+".");
                      System.out.println("The code to open the box is "+gcdAB+".");
    }
}
